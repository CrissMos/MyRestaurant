@model IEnumerable<MyRestaurant.Models.Reservation>

@{
    ViewBag.Title = "Reservations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reservations</h2>

<p>@Html.ActionLink("New Reservation", "New", "Reservations", new { @class = "btn btn-primary" }, null)</p>

@if (!Model.Any())
{
    <p>There is no reservations for the moment.</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Number</th>
                <th>Client Name</th>
                <th>Table</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reserve in Model)
            {
                <tr>
                    <td>@reserve.Number</td>
                    <td>@reserve.Name</td>
                    <td>@reserve.Table.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = reserve.Id }, null) | 
                        @Html.ActionLink("Delete", "Delete", new { id = reserve.Id }, null)
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
